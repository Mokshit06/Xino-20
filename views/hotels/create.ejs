<body class="hotel-create">

  <%- include('../partials/header.ejs') %>

  <div class="page-head">Add Hotel</div>

  <div class="hotel-form-wrapper">
    <form action="/hotels/create" method="post" class="hotel-form" enctype="multipart/form-data">
      <label>
        <span>Hotel name</span>
        <input placeholder="Taj Lake Palace" type="text" id="name" name="name" required>
      </label>
      <label>
        <span>Hotel description</span>
        <textarea
          placeholder="Taj Lake Palace, Udaipur is located midst an island in Pichola lake and offers breath-taking views of City Palace. "
          type="text" id="description" name="description" required></textarea>
      </label>
      <!-- <label>
        <span>Price</span>
        <div class="range-slider">
          <input class="range-slider-range" type="range" value="100" min="0" max="30000" name="price" step="500">
          <span class="range-slider-value">0</span>
        </div>
      </label> -->
      <label>
        <span>Location (City and State)</span>
        <input placeholder="Pichola, Udaipur" type="text" name="area" id="area" required>
      </label>
      <label>
        <span>Hotel image</span>
        <div class="image-area">
          <input type="file" name="image" id="file" required>
          <img src id="file-image" />
        </div>
      </label>

      <button type="submit">Next</button>
    </form>
  </div>

  <script>
    // const rangeSlider = () => {
